<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button fx:id="siemaaButton" GridPane.rowIndex="2" GridPane.columnIndex="0" text="Siemaa!"
    onAction="#onButtonClicked"/>
    <Button fx:id="naraaButton" GridPane.rowIndex="2" GridPane.columnIndex="1" text="Naraa!"
            onAction="#onButtonClicked"/>
    <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Write your name below:"/>
    <TextField fx:id="nameSpace" GridPane.rowIndex="1" GridPane.columnIndex="0"
               onKeyReleased="#handleKeyReleased" GridPane.columnSpan="2"/>
    <CheckBox fx:id="clearingBox" text="Clear text field after Siemaa or Naraa"
              GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
              onAction="#boxChecked"/>
</GridPane>
